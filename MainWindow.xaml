<Window
    x:Class="ContactsApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="500"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Name" />
            <TextBox x:Name="nametextBox" Margin="0,0,0,0" />

            <Label Content="Email" />
            <TextBox x:Name="emailtextBox" Margin="0,0,0,0" />

            <Label Content="Phone" />
            <TextBox x:Name="phonetextBox" Margin="0,0,0,5" />

            <Button
                x:Name="saveButton"
                Margin="0,0,0,5"
                Click="saveButton_Click"
                Content="Save" />

            <Button
                x:Name="loadBtn"
                Margin="0,0,0,5"
                Click="loadBtn_Click"
                Content="Load" />

            <ListView x:Name="listView" />

            <!--<DataGrid AutoGenerateColumns="False" Name="datagrid"/>-->
        </StackPanel>
    </Grid>
</Window>
